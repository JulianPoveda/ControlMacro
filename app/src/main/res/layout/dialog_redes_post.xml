<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="520dp"
    android:padding="13dp"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="10">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:weightSum="13">

        <TextView
            android:id="@+id/PosteTxtGPSLat"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.6"
            android:text="Lat"
            android:gravity="center_vertical|left"/>

        <EditText
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/EditLatGrado"
            android:numeric="integer"
            android:layout_weight="1.6"/>

        <TextView
            android:id="@+id/PosteTxtLatGrado"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.2"
            android:text="°"
            android:textStyle="bold"
            android:textSize="25dp"
            android:gravity="top|left"/>

        <EditText
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/EditLatMinutos"
            android:numeric="integer"
            android:layout_weight="1.7"/>

        <TextView
            android:id="@+id/PosteTxtLatMin"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.2"
            android:text="'"
            android:textStyle="bold"
            android:textSize="25dp"
            android:gravity="top|left"/>

        <EditText
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/EditLatSegundos"
            android:numeric="integer"
            android:layout_weight="1.7"/>

        <TextView
            android:id="@+id/PosteTxtLatSeg"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.3"
            android:textStyle="bold"
            android:textSize="25dp"
            android:text="@string/TxtSegundosLat"
            android:gravity="left"/>

        <TextView
            android:id="@+id/PosteTxtGPSLong"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Long"
            android:gravity="center_vertical|right"/>

        <EditText
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/EditLongGrado"
            android:numeric="integer"
            android:layout_weight="1.6"/>

        <TextView
            android:id="@+id/PosteTxtLongGrado"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.2"
            android:text="°"
            android:textStyle="bold"
            android:textSize="25dp"
            android:gravity="top|left"/>

        <EditText
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/EditLongMinuto"
            android:numeric="integer"
            android:layout_weight="1.7"/>

        <TextView
            android:id="@+id/PosteTxtLongMin"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.2"
            android:text="'"
            android:textStyle="bold"
            android:textSize="25dp"
            android:gravity="top|left"/>

        <EditText
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/EditLongSegundos"
            android:numeric="integer"
            android:layout_weight="1.7"/>

        <TextView
            android:id="@+id/PosteTxtLongSeg"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.3"
            android:textStyle="bold"
            android:textSize="25dp"
            android:text="@string/TxtSegundosLat"
            android:gravity="left"/>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:weightSum="4">

        <TextView
            android:id="@+id/PosteTxtTipo"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Tipo"
            android:gravity="center_vertical|right"/>

        <Spinner
            android:id="@+id/SpinnerTipoRedesPoste"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"/>
     </LinearLayout>

     <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:weightSum="4">

        <TextView
            android:id="@+id/PosteTxtCompartido"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Compartido"
            android:gravity="center_vertical|right"/>

        <EditText
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/EditCompartidoRedesPoste"
            android:layout_weight="3" />

     </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:weightSum="4">

        <TextView
            android:id="@+id/PosteTxtEstado"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Estado"
            android:gravity="center_vertical|right"/>

        <Spinner
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/SpinnerEstadoRedesPoste"
            android:layout_weight="3" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:weightSum="4">

        <TextView
            android:id="@+id/PosteTxtMaterial"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Material"
            android:gravity="center_vertical|right"/>

        <Spinner
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/SpinnerMaterialRedesPoste"
            android:layout_weight="3" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:weightSum="4">

        <TextView
            android:id="@+id/PosteTxtAltura"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Altura"
            android:gravity="center_vertical|right"/>

        <Spinner
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/SpinnerAlturaRedesPoste"
            android:layout_weight="1" />

        <RadioButton
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="Nodo"
            android:id="@+id/BotonNodonuevo"
            android:layout_weight="0.7"
            android:onClick="onRadioButtonClicked"/>

        <EditText
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/EditNuevoNodo"
            android:layout_weight="1" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:weightSum="4">

        <TextView
            android:id="@+id/PosteTxtEstructura"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Estructura"
            android:gravity="center_vertical|right"/>

        <Spinner
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/SpinnerEstructuraRedesPoste"
            android:layout_weight="1.5" />

        <Spinner
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/SpinnerCantEsPoste"
            android:layout_weight="0.5" />

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:text="+"
            android:id="@+id/PosteBtonMas"
            android:textStyle="bold" />

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:text="-"
            android:id="@+id/PosteBtoMenos"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:weightSum="1"
        android:gravity="center_horizontal|center_vertical">

        <EditText
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/EditEstructuraPoste"
            android:layout_weight="1"
            android:textColor="#990000"
            android:textStyle="bold"/>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:weightSum="4">

        <TextView
            android:id="@+id/PosteTxtObservacion"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Observacion"
            android:gravity="center_vertical|right"/>

        <EditText
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:id="@+id/EditObsRedesPoste"
            android:layout_weight="3" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:weightSum="3"
        android:gravity="center_horizontal|center_vertical">

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Aceptar"
            android:id="@+id/PosteBtonAceptar" />

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Cancelar"
            android:layout_weight="1"
            android:id="@+id/PosteBtonCancelar" />
    </LinearLayout>

</LinearLayout>
