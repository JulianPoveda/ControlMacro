<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:weightSum="10">


    <EditText
        android:id="@+id/EditItemRedesPoste"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:weightSum="2">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:id="@+id/EditLatRedesPoste"
            android:layout_weight="1" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:id="@+id/EditLongRedesPoste"
            android:layout_weight="1" />
    </LinearLayout>

    <Spinner
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:id="@+id/SpinnerTipoRedesPoste"
        android:layout_weight="1"/>

    <EditText
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:id="@+id/EditCompartidoRedesPoste"
        android:layout_weight="1" />

    <Spinner
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:id="@+id/SpinnerEstadoRedesPoste"
        android:layout_weight="1" />

    <Spinner
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:id="@+id/SpinnerMaterialRedesPoste"
        android:layout_weight="1" />

    <Spinner
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:id="@+id/SpinnerAlturaRedesPoste"
        android:layout_weight="1" />

    <Spinner
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:id="@+id/SpinnerEstructuraRedesPoste"
        android:layout_weight="1" />

    <EditText
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:id="@+id/EditObsRedesPoste"
        android:layout_weight="2" />
</LinearLayout>
