<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:weightSum="10">

    <TextView
        android:id="@+id/RedesPostesLblItem"
        android:layout_height="match_parent"
        android:layout_width="0dp"
        android:layout_weight="0.5"
        android:gravity="center_vertical|center_horizontal"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_height="match_parent"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:weightSum="2">

        <TextView
            android:id="@+id/RedesPosteLblLat"
            android:layout_height="0dp"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical|center_horizontal"/>

        <TextView
            android:id="@+id/RedesPosteLblLong"
            android:layout_height="0dp"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical|center_horizontal"/>
    </LinearLayout>

    <TextView
        android:id="@+id/RedesPosteLblTipo"
        android:layout_height="match_parent"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:gravity="center_vertical|center_horizontal"/>

    <TextView
        android:id="@+id/RedesPosteLblCompartido"
        android:layout_height="match_parent"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:gravity="center_vertical|center_horizontal" />

    <TextView
        android:id="@+id/RedesPosteLblEstado"
        android:layout_height="match_parent"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:gravity="center_vertical|center_horizontal"/>

    <TextView
        android:id="@+id/RedesPosteLblMaterial"
        android:layout_height="match_parent"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:gravity="center_vertical|center_horizontal"/>

    <TextView
        android:id="@+id/RedesPosteLblAltura"
        android:layout_height="match_parent"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:gravity="center_vertical|center_horizontal"/>

    <TextView
        android:id="@+id/RedesPosteLblEstructura"
        android:layout_height="match_parent"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:gravity="center_vertical|center_horizontal"/>

    <TextView
        android:id="@+id/RedesPosteLblObservacion"
        android:layout_height="match_parent"
        android:layout_width="0dp"
        android:layout_weight="2.5"
        android:gravity="center_vertical|center_horizontal"/>
</LinearLayout>
