<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="13"
    android:background="#141010">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="New Text"
        android:id="@+id/LecturaTxtRuta"
        android:gravity="center_horizontal|center_vertical"
        android:textSize="20dp"
        android:textStyle="bold"
        android:textColor="#ff0666ff"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:weightSum="10"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <Button
                    android:id="@+id/LecturaBtnAnterior"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="@string/LecturaBtnAnterior"
                    android:textStyle="bold"
                    android:textSize="40dp"
                    android:textColor="#FF5CBD79"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="8"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:text="New Text"
                    android:id="@+id/LecturaTxtCuenta"
                    android:gravity="center_horizontal|center_vertical"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:textColor="#ffff5e2c"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:text="New Text"
                    android:id="@+id/LecturaTxtMedidor"
                    android:gravity="center_horizontal|center_vertical"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:textColor="#ffff5e2c"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:text="New Text"
                    android:id="@+id/LecturaTxtNombre"
                    android:gravity="center_vertical|center_horizontal"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    android:textColor="#ffff5e2c"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:text="New Text"
                    android:id="@+id/LecturaTxtDireccion"
                    android:gravity="center_vertical|center_horizontal"
                    android:textSize="15dp"
                    android:textColor="#ffff5e2c"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <Button
                    android:id="@+id/LecturaBtnSiguiente"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="@string/LecturaBtnSiguiente"
                    android:textStyle="bold"
                    android:textSize="40dp"
                    android:textColor="#FF5CBD79"/>

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:orientation="vertical">

        <TextView
            android:id="@+id/LecturaLblUbicacionGPS"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="@string/LecturaLblUbicacionGPS"
            android:gravity="center_vertical|center_horizontal"
            android:textSize="20dp"
            android:textColor="#ffff5e2c"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:weightSum="10">

            <TextView
                android:id="@+id/LecturaLblLatitud"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.5"
                android:text="@string/LecturaLblUbicacionLatitud"
                android:gravity="center_vertical|right"
                android:textSize="20dp"
                android:textColor="#ffff5e2c"/>

            <EditText
                android:id="@+id/LecturaTxtLatitud"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3.5"
                android:gravity="bottom|center"
                android:textSize="20dp"
                android:inputType="number"
                android:textColor="#FF5CBD79"/>

            <TextView
                android:id="@+id/LecturaLblLongitud"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.5"
                android:text="@string/LecturaLblUbicacionLongitud"
                android:gravity="center_vertical|right"
                android:textSize="20dp"
                android:textColor="#ffff5e2c"/>

            <EditText
                android:id="@+id/LecturaTxtLongitud"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3.5"
                android:gravity="bottom|center"
                android:textSize="20dp"
                android:inputType="number"
                android:textColor="#FF5CBD79"/>

        </LinearLayout>



    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:weightSum="10">

        <TextView
            android:id="@+id/LecturaLblLectura1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:text="@string/LecturaLblLectura1"
            android:gravity="center_vertical|right"
            android:textSize="20dp"
            android:textColor="#ffff5e2c"/>

        <EditText
            android:id="@+id/LecturaTxtLectura1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:gravity="bottom|center"
            android:textSize="20dp"
            android:inputType="number"
            android:textColor="#FF5CBD79"/>

        <TextView
            android:id="@+id/LecturaLblLectura2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:text="@string/LecturaLblLectura2"
            android:gravity="center_vertical|right"
            android:textSize="20dp"
            android:textColor="#ffff5e2c"/>

        <EditText
            android:id="@+id/LecturaTxtLectura2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:inputType="number"
            android:layout_weight="3"
            android:gravity="bottom|center"
            android:textSize="20dp"
            android:textColor="#FF5CBD79"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:weightSum="10">

        <TextView
            android:id="@+id/LecturaLblLectura3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:text="@string/LecturaLblLectura3"
            android:gravity="center_vertical|right"
            android:textSize="20dp"
            android:textColor="#ffff5e2c"/>

        <EditText
            android:id="@+id/LecturaTxtLectura3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:gravity="bottom|center"
            android:textSize="20dp"
            android:textColor="#FF5CBD79"
            android:inputType="number" />

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:text="@string/LecturaBtnGuardar"
            android:textColor="#ffff5e2c"
            android:id="@+id/LecturasBtnGuardar"
            android:gravity="center_horizontal|center_vertical" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4"
        android:orientation="vertical">

        <TextView
            android:id="@+id/LecturaLblObservacion"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="@string/LecturaLblObservacion"
            android:gravity="center_horizontal|bottom"
            android:textSize="20dp"
            android:textColor="#ffff5e2c"/>

        <EditText
            android:id="@+id/LecturaEditMensaje"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:inputType="textMultiLine"
            android:layout_weight="3"
            android:gravity="top"
            android:textColor="#FF5CBD79" />
    </LinearLayout>

</LinearLayout>
