<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="12"
    android:background="#141010">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="New Text"
        android:id="@+id/LecturaLblRuta"
        android:gravity="center_horizontal|center_vertical"
        android:textSize="20dp"
        android:textStyle="bold"
        android:textColor="#ff0666ff"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:weightSum="10"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <Button
                    android:id="@+id/LecturaBtnAnterior"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="@string/LecturaBtnAnterior"
                    android:textStyle="bold"
                    android:textSize="40dp"
                    android:textColor="#FF5CBD79"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="8"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:text="New Text"
                    android:id="@+id/LecturaLblCuenta"
                    android:gravity="center_horizontal|center_vertical"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:textColor="#ffff5e2c"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:text="New Text"
                    android:id="@+id/LecturaLblMedidor"
                    android:gravity="center_horizontal|center_vertical"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:textColor="#ffff5e2c"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:text="New Text"
                    android:id="@+id/LecturaLblNombre"
                    android:gravity="center_vertical|center_horizontal"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    android:textColor="#ffff5e2c"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:text="New Text"
                    android:id="@+id/LecturaLblDireccion"
                    android:gravity="center_vertical|center_horizontal"
                    android:textSize="15dp"
                    android:textColor="#ffff5e2c"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <Button
                    android:id="@+id/LecturaBtnSiguiente"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="@string/LecturaBtnSiguiente"
                    android:textStyle="bold"
                    android:textSize="40dp"
                    android:textColor="#FF5CBD79"/>

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:weightSum="10">

        <TextView
            android:id="@+id/LecturaLblPoste"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:text="@string/LecturaLblPoste"
            android:gravity="center_vertical|center_horizontal"
            android:textSize="20dp"
            android:textColor="#ffff5e2c"/>


        <EditText
            android:id="@+id/LecturaTxtPoste"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="bottom|center"
            android:textSize="20dp"
            android:inputType="number"
            android:textColor="#FF5CBD79"/>

        <TextView
            android:id="@+id/LecturaLblLectura1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:text="@string/LecturaLblLectura"
            android:gravity="center_vertical|right"
            android:textSize="20dp"
            android:textColor="#ffff5e2c"/>

        <EditText
            android:id="@+id/LecturaTxtLectura1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:gravity="bottom|center"
            android:textSize="20dp"
            android:inputType="numberPassword"
            android:textColor="#FF5CBD79"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4"
        android:orientation="vertical">

        <TextView
            android:id="@+id/LecturaLblObservacion"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="@string/LecturaLblObservacion"
            android:gravity="center_horizontal|bottom"
            android:textSize="20dp"
            android:textColor="#ffff5e2c"/>

        <EditText
            android:id="@+id/LecturaTxtObservacion"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:inputType="textMultiLine"
            android:layout_weight="3"
            android:gravity="top"
            android:textColor="#FF5CBD79" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:gravity="center_horizontal|center_vertical"
        android:weightSum="10">

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4 "
            android:text="@string/LecturaBtnGuardar"
            android:textColor="#ffff5e2c"
            android:id="@+id/LecturasBtnGuardar"
            android:gravity="center_horizontal|center_vertical" />
    </LinearLayout>a

</LinearLayout>
