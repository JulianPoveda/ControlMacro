<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="350dp"
    android:layout_height="320dp"
    android:weightSum="7"
    android:orientation="vertical"
    android:padding="10dp">

    <TextView
        android:id="@+id/DialogConfirmTitulo"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:gravity="left|center_vertical"
        android:textSize="22dp"
        android:text="@string/lbl_dialog_new_user_titulo"
        android:textColor="#2E64FE"
        android:layout_weight="1"/>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:weightSum="10"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:gravity="center_vertical|center_horizontal">

        <TextView
            android:id="@+id/DialogNewUserLblMedidor"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4.5"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/lbl_dialog_new_user_marca_medidor"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical|right"/>

        <EditText
            android:id="@+id/DialogNewUserTxtMedidor"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="5.5"/>
    </LinearLayout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:weightSum="10"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:gravity="center_vertical|center_horizontal">

        <TextView
            android:id="@+id/DialogNewUserLblSerie"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4.5"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/lbl_dialog_new_user_serie_medidor"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical|right"/>

        <EditText
            android:id="@+id/DialogNewUserTxtSerie"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="5.5"/>
    </LinearLayout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:weightSum="10"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:gravity="center_vertical|center_horizontal">

        <TextView
            android:id="@+id/DialogNewUserLblCuenta"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4.5"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/lbl_dialog_new_user_cuenta"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical|right"/>

        <EditText
            android:id="@+id/DialogNewUserTxtCuenta"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="5.5"/>
    </LinearLayout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:weightSum="10"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:gravity="center_vertical|center_horizontal">

        <TextView
            android:id="@+id/DialogNewUserLblNombre"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4.5"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/lbl_dialog_new_user_nombre"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical|right"/>

        <EditText
            android:id="@+id/DialogNewUserTxtNombre"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="5.5"/>
    </LinearLayout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:weightSum="10"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:gravity="center_vertical|center_horizontal">

        <TextView
            android:id="@+id/DialogNewUserLblDireccion"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4.5"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/lbl_dialog_new_user_direccion"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical|right"/>

        <EditText
            android:id="@+id/DialogNewUserTxtDireccion"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="5.5"/>
    </LinearLayout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:weightSum="10"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:gravity="center_vertical|center_horizontal">

        <Button
            android:id="@+id/DialogNewUserBtnAceptar"
            android:layout_width="0dp"
            android:layout_weight="4"
            android:layout_height="match_parent"
            android:text="@string/btn_aceptar_dialog_single_input"/>

        <Button
            android:id="@+id/DialogNewUserBtnCancelar"
            android:layout_width="0dp"
            android:layout_weight="4"
            android:layout_height="match_parent"
            android:text="@string/btn_cancelar_dialog_single_input"/>
    </LinearLayout>
</LinearLayout>
